<h1><%= @movie.title %></h1>

<p>Creation Year: <%= @movie.creation_year %></p>
<p>Genre: <%= @movie.genre %></p>
<p>Actors:</p>
<p><% @movie.youngest_to_oldest.each do |actor| %>
  <%= actor.name %>
<% end %></p>
<p>Average Age of Actors: <%= @movie.actors.average_age %></p>

<hr>

<p>Add a New Actor to this Movie</p>
<%= form_with url: '/movies/#{@movie.id}', method: :post, local:true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :age %>
  <%= form.text_field :age %>

  <%= form.submit "Submit" %>
<% end %>
